<Window x:Class="WpfApp1.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Info" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Image x:Name="image"></Image>
            <TextBlock x:Name="main_info"></TextBlock>
            <StackPanel Margin="30" Orientation="Horizontal">
                <Button Click="Button_Click" Margin="10,0" FontSize="17" >Впустить</Button>
                <Button Click="ZaClick" FontSize="17" Margin="10,0">Выпустить</Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
