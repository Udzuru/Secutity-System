<Window x:Class="WpfApp1.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Add" Height="250" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock>Установите дату и время</TextBlock>
            <DatePicker x:Name="Set_Data"></DatePicker>
            <StackPanel Margin="10" Orientation="Horizontal">
                <TextBlock Margin="10,0">Часы</TextBlock>
                <TextBox x:Name="Set_hour" Width="100"></TextBox>
                <TextBlock Margin="10,0">Минуты</TextBlock>
                <TextBox x:Name="Set_minute" Width="100"></TextBox>
            </StackPanel>
            <Button Click="Button_Click">Подтвердить</Button>
            
        </StackPanel>
    </Grid>
</Window>
