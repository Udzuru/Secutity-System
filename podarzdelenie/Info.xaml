<Window x:Class="WpfApp1.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Info" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Image x:Name="image"></Image>
            <TextBlock x:Name="main_info"></TextBlock>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right">
            <Button Margin=" 10" x:Name="There" Click="NoPass_Click" FontSize="16" Width="160" Height="40">Начать прием</Button>
            <Button  Margin=" 10" x:Name="NoThere" Background="#FFE3FFDD" Click="Pass_Click" FontSize="16" Width="160" Height="40">Завершить прием</Button>
            <Button  Margin=" 10" x:Name="BlackList" Background="Red" Click="BlackList_Click" FontSize="16" Width="160" Height="40">В черный список</Button>
        </StackPanel>
    </Grid>
</Window>
